# Configurações do Servidor
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost/igreja-cristo-centro

# JWT (Gerar uma chave segura para produção)
JWT_SECRET=sua_chave_secreta_muito_longa_e_complexa
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:8000

# Google APIs
YOUTUBE_API_KEY=sua_chave_api_youtube
GOOGLE_CLIENT_ID=seu_client_id
GOOGLE_CLIENT_SECRET=seu_client_secret
GOOGLE_DRIVE_FOLDER_ID=id_da_pasta_drive_para_backups

# Backup
ENABLE_DRIVE_BACKUP=false
MAX_BACKUPS=7

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutos em milissegundos
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info

# Segurança
BCRYPT_SALT_ROUNDS=12
SECURE_COOKIE=false  # Mudar para true em produção
SESSION_SECRET=outra_chave_secreta_muito_longa_e_complexa

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30