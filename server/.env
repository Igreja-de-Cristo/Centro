PORT=3000
NODE_ENV=development
MONGODB_URI=mongodb://localhost/igreja-cristo-centro

# Chave secreta temporária para desenvolvimento (alterar em produção!)
JWT_SECRET=temp_dev_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:8000

# Configurações de Segurança
BCRYPT_SALT_ROUNDS=12
SECURE_COOKIE=false
SESSION_SECRET=temp_session_secret_change_in_production

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Backup
ENABLE_DRIVE_BACKUP=false
MAX_BACKUPS=7

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100